@using Microsoft.AspNetCore.Identity;
@using AwesomeNetwork.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AwesomeNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AwesomeNetwork.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mani-page.css" asp-append-version="true" />
</head>
<body class="background-main">
    <header class="border-bottom header background-white">
        <div class="container">
            <div class="topnav row">
                @if (!SignInManager.IsSignedIn(User))
                {
                    <div class="col-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index"><img class="navbar-toggler-icon" alt="SocialNetwork" src="~/img/free-icon-font-home-3917074.svg"/></a>
                    </div>
                }
                else
                {
                    <div class="col-4">
                        <a asp-area="" asp-controller="AccountManager" asp-action="MyPage"><img class="navbar-toggler-icon" alt="" src="~/img/free-icon-font-user-3917711.svg" /></a>
                    </div>
                }
                <div class="col-4">
                    <partial name="_SearchLayoutPartial"/>
                </div>
                <div class="col-4 align-content-end">
                    <partial name="_LoginPartial"/>
                </div>

            </div>
        </div>
    </header>
    <div class="container background-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - IvanAndKonstantin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

